<%- include('_header.ejs') %>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-success">
        <span>
            <a class="navbar-brand" href="">
                <img src="/img/logo2.png" alt="..." width="25px">
                Operatoria Web</a>
        </span>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/home">Destinos</a>
                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link" href="/tecnicos">tecnicos</a>
                </li> -->

                <% if( user.perfil==='Nivel 3' || user.perfil==='Nivel 2' ){ %>
                    <li class="nav-item">
                        <a class="nav-link" href="/guiasDeRetorno">Guias de retorno</a>
                    </li>
                    <% } %>
                        <% if( user.perfil=='Nivel 3' ) {%>
                            <li class="nav-item">
                                <u><a class="nav-link active" href="/usuarios">Usuarios<span
                                            class="sr-only">(current)</span></a></u>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/habilitarDestino">Habilitar destino</a>
                            </li>
                            <% } %>
