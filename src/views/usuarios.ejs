            <form class="form-inline my-2 my-lg-0">
                <span class="mx-3">
                    <%= user.empresa %>
                </span>
                <span class="mx-3">@ <%= user.username %></span>
                <a class="nav-link btn btn-danger" href="/salir">X</a>
            </form>
        </div>
    </nav>





    <% if(message.length> 0 ) {%>
        <div class="alert alert-warning alert-dismissible fade show m-3" role="alert">
            <%= message %>
                <div class="text-center">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
        </div>
        <% } %>




            <div class="container">

                <!-- <div class="mt-3">
                    <a href="/register">Agregar nuevo usuario</a>
                </div> -->


                <div class="row mt-3">
                    <table class="table table-hover shadow-sm">
                        <thead class="table-info">
                            <th>ESTADO</th>
                            <th>APELLIDO</th>
                            <th>NOMBRE</th>
                            <th>USERNAME</th>
                            <th>PERFIL</th>
                            <th>
                                <a href="/register" class="badge badge-secondary">NUEVO USUARIO...</a>
                            </th>
                        </thead>
                        <tbody id="myTable">
                            <% usuarios.forEach(e=> { %>
                                <tr>
                                    <td>
                                        <% if(e.estado=='Habilitado' ) { %>
                                            <span class="badge badge-success">
                                                <%= e.estado %>
                                            </span>
                                            <% } else { %>
                                                <span class="badge badge-danger">
                                                    <%= e.estado %>
                                                </span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= e.apellido %>
                                    </td>
                                    <td>
                                        <%= e.nombre %>
                                    </td>
                                    <td>
                                        <%= e.username %>
                                    </td>
                                    <td>
                                        <%= e.perfil %>
                                    </td>

                                    <td>
                                        <a href="/editarUsuario/<%= e.id%>" class="badge badge-primary">EDITAR</a>
                                    </td>
                                </tr>
                                <% })%>

                        </tbody>
                    </table>
                </div>
            </div>


            <%- include('_footer.ejs') %>