<%- include('_header.ejs') %>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-success">
        <span>
            <a class="navbar-brand" href="">
                <img src="/img/logo2.png" alt="..." width="25px">
                Operatoria Web</a>
        </span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/home">Destinos</a>
                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link" href="/tecnicos">tecnicos</a>
                </li> -->

                <% if( user.perfil==='Nivel 3' || user.perfil==='Nivel 2' ){ %>
                    <li class="nav-item">
                        <u><a class="nav-link active" href="/guiasDeRetorno">Guias de retorno<span
                                    class="sr-only">(current)</span></a></u>
                    </li>

                    <% } %>

                        <% if( user.perfil=='Nivel 3' ) {%>
                            <li class="nav-item">
                                <a class="nav-link" href="/usuarios">Usuarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/habilitarDestino">Habilitar destino</a>

                            </li>
                            <% } %>




            </ul>
            <form class="form-inline my-2 my-lg-0">
                <span class="mx-3">
                    <%= user.empresa %>
                </span>
                <span class="mx-3">@ <%= user.username %></span>
                <a class="nav-link btn btn-danger" href="/salir">X</a>
            </form>
        </div>
    </nav>




    <div class="row mt-4">
        <div class="col col-md-10 offset-md-1">
            <table class="table table-sm table-hover">
                <thead class="table-info">
                    <th>TECNICO</th>
                    <th>PROVINCIA</th>
                    <th>LOCALIDAD</th>
                    <th>ENVIO / RETORNO</th>
                </thead>
                <tbody>
                    <% destinos.forEach(e=> { %>

                        <tr class="shadow-sm p-2">

                            <td class="align-middle">
                                <textarea name="" class="form-control" readonly rows="3" style="overflow:hidden;"><%= e.guiasDeRetornoDetalle %>
                                </textarea>
                            </td>

                            <td class="align-middle">
                                <div>
                                    <div>
                                        <%= e.provincia %>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">
                                <div>
                                    <div>
                                        <%= e.localidad %>
                                    </div>
                                </div>
                            </td>

                            <td class="align-middle">
                                <%= e.transportePC1 %> / <%= e.transporteRetorno %>
                            </td>


                            <% }) %>
                </tbody>
            </table>
        </div>
    </div>






    <%- include('_footer.ejs') %>